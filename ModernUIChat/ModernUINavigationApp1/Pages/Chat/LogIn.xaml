<UserControl x:Class="ModernUINavigationApp1.Pages.Chat.LogIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModernUINavigationApp1.Pages.Chat"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Login:" Margin="5,0,0,0" />
                <TextBox x:Name="loginTextBox" Height="23" TextWrapping="Wrap" HorizontalAlignment="Left" Text="Login" Width="120" Margin="5"/>
                <TextBlock Text="Password:" Margin="5,0,0,0"/>
                <PasswordBox x:Name="passwodBox" Height="23" HorizontalAlignment="Left"  Width="120" Margin="5"/>
                <Button Height="auto" Margin="5" Width="120" HorizontalAlignment="Left" Click="Button_Click" Command="NavigationCommands.GoToPage" CommandParameter="/Pages/AccountPage.xaml">
                    Войти
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>